{
  "compilerOptions": {
    "experimentalDecorators": true,
    "module": "Node16",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "target": "ES2022",
    "noImplicitAny": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "paths": {
    "*": ["node_modules/*"]
  },
  "ts-node": {
    "transpileOnly": true
  }
}
